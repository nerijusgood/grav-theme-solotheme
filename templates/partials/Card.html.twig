<article class="Card Card--overview">

  <!-- Variables -->
  {% set header_image = page.header.header_image|defined(true) %}
  {% set header_image_width  = page.header.header_image_width|defined(420) %}
  {% set header_image_height = page.header.header_image_height|defined(180) %}
  {% set header_image_file = page.header.header_image_file %}

  <!-- Markup -->
  <header class="Card-header">
    <!-- Header Image -->
    {% if header_image %}
      {% if header_image_file %}
        {% set header_image_media = page.media.images[header_image_file] %}
      {% else %}
        {% set header_image_media = page.media.images|first %}
      {% endif %}

      {% if header_image_media %}
        <a class="Card-image" href="{{ page.url }}" style="background-image:url('{{ header_image_media.cropZoom(header_image_width, header_image_height).url }}')"></a>
      {% else %}
        <a class="Card-image" href="{{ page.url }}" style="background-image:url('http://placehold.it/420x180')"></a>
      {% endif %}
    {% endif %}
  </header>

  <!-- Tags -->
  <div class="Card-content">
    {% if page.taxonomy.tag %}
      <ul class="Tag-group">
        {% for tag in page.taxonomy.tag %}
          <li>
            <a class="Tag" href="{{ blog.url }}/tag{{ config.system.param_sep }}{{ tag }}">{{ tag }}</a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}

    <!-- Heading -->
    <h2 class="Card-title"><a href="{{ page.url }}" >{{ page.title }}</a></h2>
  </div>

  <footer class="Card-footer">
    <div class="Card-date">
      <span>{{ page.date|date("d") }}</span>
      <span>{{ page.date|date("M") }}</span>
    </div>

    <!-- <div class="time">
      5 Min read
    </div> -->
  </footer>
</article>
